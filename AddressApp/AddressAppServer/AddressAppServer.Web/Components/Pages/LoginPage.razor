@inherits CommonBase
@page "/login"
@layout LayoutWithoutNavMenu
@using AddressAppServer.Web.Components.Layout

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex justify-center align-center min-height-100">
    <MudPaper Class="p-4">
        <MudText Typo="Typo.h5" Align="Align.Center" GutterBottom="true">Login</MudText>
        <EditForm EditContext="_editContext">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <MudTextField @bind-Value="loginModel.Username" Label="Username" Required="true" FullWidth="true" />
            <MudTextField @bind-Value="loginModel.Password" Label="Password" InputType="InputType.Password" Required="true" FullWidth="true" />
            <MudButton OnClick="HandleLogin" Color="Color.Primary" Variant="Variant.Filled" FullWidth="true">Login</MudButton>
        </EditForm>
    </MudPaper>
</MudContainer>

<style>
    .min-height-100 {
        min-height: 100vh;
    }
</style>
